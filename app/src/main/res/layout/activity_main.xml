<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.petrasons.alphaatssystem.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_above="@+id/system_background"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">
        </android.support.v4.view.ViewPager>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal|bottom"
            app:ci_drawable="@drawable/tab_indicator_selected"
            app:ci_drawable_unselected="@drawable/tab_indicator_default" />
    </FrameLayout>
</LinearLayout>